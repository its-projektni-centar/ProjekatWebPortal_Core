@model ProjekatWebPortal_Core.ViewModels.MaterijalUploadViewModel
@{
    ViewBag.Title = "UploadMaterijal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .file {
        visibility: hidden;
        position: absolute;
    }
</style>

<div id="sredina" class="sredina-upload-mat">
    @if (!this.User.IsInRole("Profesor"))
    {
        Html.RenderPartial("_UploadMaterijalOstali");
    }
    else if (this.User.IsInRole("Profesor"))
    {
        Html.RenderPartial("_UploadMaterijalProfesor");
    }

</div>

