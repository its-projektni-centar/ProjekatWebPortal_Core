@model ProjekatWebPortal_Core.ViewModels.SmerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="sredina" class="sredina-upload-mat" name="sredina">
    @using (Html.BeginForm("UploadPlan", "Organizacija", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "postavkaMat" }))
    {
        <div class="text-center text-success hideAfter"><h4 class="moje4">@ViewBag.SuccMsg</h4></div>
        <div class="text-center hideAfter text-warning"><h4 id="upozorenje"></h4></div>

        <input type="file" name="file" id="file" class="inputfile" accept="application/msword, application/vnd.ms-excel,application/pdf" />
        <label for="file" id="izaberi-materijal"> <span id="filename"> <span> <img src="~/Content/img/upload2.png" alt="Izaberite Dokument"> Izaberite dokument...</span></span> </label>

        <div id="dropDownovi">

            @Html.DropDownListFor(m => m.smeroviModel.smerId, new SelectList(Model.smerovi, "smerId", "smerNaziv"), new { @class = "customDropdown" })

            <select class="customDropdown" name="tip">
                <option value="its" selected>ITHS</option>
                <option value="ns">Novi Sad</option>
                <option value="ms">Ministarstvo</option>
            </select>
        </div>

        <button type="submit" id="postavi">
            POSTAVI
        </button>

    }
</div>

@*@Scripts.Render("~/bundles/upload_materijal")
@Scripts.Render("~/Scripts/Materijal/uploadNaziv.js")*@
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
    setTimeout(function () {
        $('.hideAfter').fadeOut('fast');
    }, 5000);
</script>
